<p id="notice"><%= notice %></p>
<p>
  <%= image_tag @product.photo.url(:medium)%>
</p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
<strong>Price in USD:</strong>
<%= @product.formatted_price %>
</p>

<p>
<strong>Price in BTC:</strong>
<%= @product.btc_price %>
</p>


<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    Added on: <%= time_ago_in_words review.created_at %> ago
  </p>
<% end %>

  <h3>New Review</h3>
<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

