<%= stylesheet_link_tag "products.css" %>
<link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
<p id="notice"><%= notice %></p>

<header>
<ul>
  <li><%= link_to 'Home', root_path %></li>
  <li><a href="http://twitter.com/Wyncode">Twitter</a></li>
  <li><a href="http://www.facebook.com/Wyncode">Facebook</a></li>
</ul>
</header>

<div class="display">
<p>
  <%= image_tag @product.photo.url(:medium)%>
</p>

<p>
  <strong>Name:<br/></strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:<br/></strong>
  <%= @product.description %>
</p>

<p>
<strong>Price: $</strong>
<%= @product.formatted_price %> | <%= @btc_price %>BTC
</p>

<div class="dropdown">
  <!-- <button class="dropbtn">Size</button> -->
  <div class="dropdown-content">
    <a href="#">S</a>
    <a href="#">M</a>
    <a href="#">L</a>
    <a href="#">XL</a>
  </div>
  <button class="dropbtn">Add to Cart</button>
</div>

<!-- <form action="http://google.com">
    <input type="submit" value="Add to Cart" />
</form> -->

<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <br>
    <span>Added on: <%= time_ago_in_words review.created_at %> ago</span>
    <hr>
  </p>
<% end %>

  <h3>Leave a review about this product:</h3>
<%= render 'reviews/form' %>

</div>
